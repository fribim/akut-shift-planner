{% form_theme form _self %}

{% block form_errors -%}
    {% spaceless %}

    {% if errors|length > 0 -%}
        <div class="alert alert-danger">
            {%- for error in errors -%}
                <i class="fa fa-exclamation-triangle" aria-hidden="true"></i> {{ error.message }}
            {%- endfor -%}
        </div>
    {%- endif %}
        {% endspaceless %}
{%- endblock form_errors %}